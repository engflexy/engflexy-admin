<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="exercice">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="content" type="VARCHAR(500)"/>
        <column name="description" type="VARCHAR(500)"/>
        <column name="libelle" type="VARCHAR(500)"/>
        <column name="numero" type="BIGINT"/>

        <column name="content_type_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="section_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="exercice"
              baseColumnNames="content_type_id"
              referencedTableName="content_type"
              referencedColumnNames="id"
              constraintName="fk_exercice_content_type"/>
      <addForeignKeyConstraint
              baseTableName="exercice"
              baseColumnNames="section_id"
              referencedTableName="section"
              referencedColumnNames="id"
              constraintName="fk_exercice_section"/>

  </changeSet>


  <!-- Load Data from CSV -->
  <changeSet id="3" author="your-name">
    <loadData
            file="classpath:/db/migration/data/course/Exercice.csv"
            tableName="exercice">
      <column name="id" type="NUMERIC"/>
          <column name="content" type="VARCHAR(500)"/>
          <column name="description" type="VARCHAR(500)"/>
          <column name="libelle" type="VARCHAR(500)"/>
          <column name="numero" type="BIGINT"/>
        <column name="content_type" type="BIGINT"/>
        <column name="section" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
